@page
@model eBookStore.Pages.Auth.LoginModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
}

<link href="~/css/logincss.css" rel="stylesheet" />
<div class="login-box">
    <h2>Login</h2>
    <form method="post">
        <div class="user-box">
            <input asp-for="@Model.user.EmailAddress" type="text" required="">
            <label>Username</label>
        </div>
        <div class="user-box">
            <input asp-for="@Model.user.Password" type="password"  required="">
            <label>Password</label>
        </div>
        <a href="#">
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            <input type="submit" value="Submit">
        </a>
        @if (ViewData["Error"] != null)
        {
            <p style="color:white">Error: @ViewData["Error"]</p>
        }
    </form>
</div>